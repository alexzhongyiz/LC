recursion:
    def mergeTwoLists(self, l1: ListNode, l2: ListNode) -> ListNode:
        
        if not l2:
            return l1
        if not l1:
            return l2
        if l1.val < l2.val:
            l1.next = self.mergeTwoLists( l1.next, l2)
            return l1
        else:
            l2.next = self.mergeTwoLists( l2.next, l1)
            return l2
             
 iteration:
 prevhead = ListNode(-1)
        
        cur = prevhead
        while l1 and l2:
            if l2.val < l1.val:
                cur.next = l2
                l2 = l2.next
            else:
                cur.next = l1
                l1 = l1.next
            cur = cur.next
        
        if not l1:
            cur.next = l2
        else:
            cur.next = l1
        return prevhead.next
